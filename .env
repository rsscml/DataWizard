# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=False
SECRET_KEY=<flask-secret-key>

# OnlyOffice Configuration
ONLYOFFICE_SERVER_URL=<Your_OnlyOffice_Document_Server_URL>
ONLYOFFICE_CALLBACK_URL=<OnlyOffice_Callback_URL>

# Optional: JWT Configuration for OnlyOffice (Production)
ONLYOFFICE_JWT_SECRET=your-jwt-secret-key
ONLYOFFICE_JWT_ENABLED=false

# Default database configuration
DATABRICKS_SERVER_HOSTNAME=adb-xyz.azuredatabricks.net
DATABRICKS_HTTP_PATH=/sql/1.0/warehouses/<databricks_http_path>
DATABRICKS_CATALOG=<your_unity_catalog_name>
DATABRICKS_SCHEMA=<schema_name_within_uc>

# Azure Variables
AZURE_TENANT_ID=<>
AZURE_CLIENT_ID=<>
AZURE_CLIENT_SECRET=<>
SCOPE=<>
SPN=<>
SUBSCRIPTION_KEY=<>
TOKEN_URL=https://login.microsoftonline.com/<tenant_id>/oauth2/v2.0/token
AZURE_OPENAI_BASE_URL=<>
MODEL_VERSION=2024-11-20

# Database configuration file (optional)
DATABASE_CONFIG_FILE=database_configs.json

# LLM Provider Selection (azure_openai, openai, claude, gemini)
LLM_PROVIDER=claude

# OpenAI Configuration
# snapshot gpt-5-mini-2025-08-07
OPENAI_API_KEY=<>
OPENAI_MODEL=gpt-5-mini
OPENAI_MAX_TOKENS=16000

# Claude Configuration
ANTHROPIC_API_KEY=<>
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_MAX_TOKENS=16000

# Gemini Configuration
GOOGLE_API_KEY=<>
GEMINI_MODEL=gemini-2.5-pro
GEMINI_MAX_TOKENS=16000

# General LLM Settings
LLM_TEMPERATURE=0.1
LLM_MAX_RETRIES=3
LLM_TIMEOUT=300
LLM_STREAMING=false

# Prompt Caching Configuration
LLM_ENABLE_CACHING=false

# Text Standardization Configuration (Conservative Mode)
TEXT_STANDARDIZATION_ENABLED=True
TEXT_STANDARDIZATION_THRESHOLD=95  # Very high threshold for safety
